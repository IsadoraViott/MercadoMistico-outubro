Banco de dados 
create database mercadomistico;
use mercadomistico;
 
 
create table usuarios (
id int not null auto_increment primary key,
nome varchar(255) not null,
email varchar(255) not null,
senha varchar(255) not null,
perfil enum ('admin', 'usuario') default ('usuario'),
status enum ('Ativo', 'Inativo') default ('Ativo'),
created_at timestamp default current_timestamp 
);
 
create table produtos (
	id int not null auto_increment primary key,
    nome varchar(255) not null,
    preco float not null,
    imagem text not null,
    created_at timestamp default current_timestamp 
);
 
create table favoritos (
        nome_usuario int not null,
        nome_produto int not null,        
        foreign key(nome_usuario) references usuarios(id),
        foreign key(nome_produto) references produtos (id)
);
 
SELECT * FROM produtos;
insert into usuarios(nome, email, senha, perfil)
values("Isadora Viott", "isadora@gmail.com", "1234", "admin");
SELECT id,nome,email,senha,perfil FROM usuarios WHERE email = "isadora@gmail.com";

